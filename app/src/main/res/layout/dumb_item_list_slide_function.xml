<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:background="@color/indigo_900"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <org.lunci.dumbthing.ui.RippleImageView
        android:id="@+id/imageButton_delete"
        android:background="@color/red_700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scaleType="center"
        res:rv_type="simpleRipple"
        res:rv_centered="true"
        res:rv_rippleDuration="200"/>

    <org.lunci.dumbthing.ui.RippleImageView
        android:id="@+id/imageButton_edit"
        android:background="@color/deep_orange_500"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_edit"
        android:scaleType="center"
        android:layout_marginRight="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        res:rv_type="simpleRipple"
        res:rv_centered="true"
        res:rv_rippleDuration="200"
        android:visibility="gone"/>

    <org.lunci.dumbthing.ui.RippleImageView
        android:id="@+id/imageView_auto_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_share_auto"
        android:background="@color/blue_900"
        android:scaleType="center"
        android:layout_marginRight="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        res:rv_centered="true"
        android:layout_gravity="center" />

    <org.lunci.dumbthing.ui.RippleImageView
        android:id="@+id/imageView_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_share"
        android:scaleType="center"
        android:background="@color/blue_900"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        res:rv_centered="true"
        android:layout_gravity="center" />
</LinearLayout>