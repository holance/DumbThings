<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <org.lunci.dumbthing.ui.SquareRippleTextView
        android:id="@+id/textView_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/textView_counter_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_indigo_300"
        android:gravity="center"
        android:text="@string/number_zero"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="@dimen/textView_counter_margin"
        android:elevation="8dp"
        android:clickable="true"
        android:enabled="true" />

    <org.lunci.dumbthing.ui.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        res:rv_centered="true"
        res:rv_type="simpleRipple"
        res:rv_rippleDuration="@integer/ripple_duration"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/button_add_margin"
        android:background="@drawable/button_circle_red_500_selector"
        android:elevation="4dp">
        <org.lunci.dumbthing.ui.SquareTextView
            android:id="@+id/textView_add_dumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dumb"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/button_add_padding"
            style="@style/Base.TextAppearance.AppCompat.Display2"
            android:singleLine="true"
            android:textColor="@color/abc_primary_text_material_dark" />
    </org.lunci.dumbthing.ui.RippleView>
</RelativeLayout>
