<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:id="@+id/tableLayout_link_share"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp"
    android:shrinkColumns="0,1">
    <TableRow android:gravity="center">
        <include layout="@layout/link_share_button"
            android:id="@+id/link_facebook_layout"></include>
        <include layout="@layout/link_share_button"
            android:id="@+id/link_twitter_layout"></include>
    </TableRow>
    <TableRow android:gravity="center">
        <include layout="@layout/link_share_button"
            android:id="@+id/link_google_layout"
            android:visibility="invisible"></include>
        <include layout="@layout/link_share_button"
            android:id="@+id/link_linkedin_layout"
            android:visibility="invisible"></include>
    </TableRow>
</TableLayout>