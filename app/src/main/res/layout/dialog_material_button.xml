<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_button_min_height_material"
    android:gravity="center_vertical"
    android:minWidth="@dimen/material_dialog_button_min_width">
    <org.lunci.dumbthing.ui.MaterialRippleLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="false">
        <Button
            android:id="@+id/button_positive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@android:string/ok"
            android:textColor="@color/blue_500"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:elevation="1dp" />
    </org.lunci.dumbthing.ui.MaterialRippleLayout>
    <View android:layout_width="1dp" android:layout_height="match_parent"
        android:background="@color/blue_700"></View>
    <org.lunci.dumbthing.ui.MaterialRippleLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@android:string/cancel"
            android:textColor="@color/red_500"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:elevation="1dp" />
    </org.lunci.dumbthing.ui.MaterialRippleLayout>
</LinearLayout>